window.main =
  init: () ->
    setTimeout ->
        $("html").addClass "init"
    , 10

    setTimeout ->
        $("html").addClass "init-1"
    , 200

    setTimeout ->
        $("html").addClass "init-2"
    , 700

    $("#myModal").on "hidden.bs.modal", (e) ->
      $(".slider-content").unslick()

    indx = 0
    _.map speakers, (val, key) ->
      if val.top.nombre.length > 1
        nombre_title = val.top.nombre.replace("<br>", "");
        html = [
          '<div class="item">'
          '<div class="img">'
          '<a href="' + key + '" title="' + nombre_title + '" class="load_speaker speak_' + key + '"><img src="' + APP_URI + val.top.imagen_fondo_mobile + '" alt="image"></a>'
          '</div>'
          '<h2>' + val.top.nombre + '</h2>'
          if val.top.texto1.length > 1
            '<h3>' + val.top.texto1 + '</h3>'
          if val.top.texto2.length > 1
            '<h4>' + val.top.texto2 + '</h4>'
          '</div>'
        ].join('\n')

        htmlThumbs = [
          '<div class="span">'
          '<a href="' + key + '" title="' + nombre_title + '" class="load_speaker speak_' + key + '"  rel="' + indx + '" style="background-image:url(' + APP_URI + val.top.imagen_fondo_mobile + ');"></a>'
          '</div>'
        ].join('\n')
        indx++
      $(".slider-speakers").append html
      # $(".thumbs-speakers").append htmlThumbs
      return

    slider_speak = ->
      $(".slider-speakers").slick
        dots: false
        autoplay: true
        speed: 800
        autoplaySpeed: 3000
        accessibility: true
        fade: false
        infinite: true
        pauseOnHover: true
        swipe: true
        slidesToShow: 1
        slidesToScroll: 1
        arrows: true

      return

    _.delay _.bind(slider_speak, speakers), 100

    main.speakerToLoad 'alessandro', 0

    $(document).on "click", ".load_speaker", (e) ->
      e.preventDefault()
      #Pageview GA
      hrefSpeak = '/speaker/' + $(this).attr('href')
      ga('send', 'pageview', hrefSpeak);
      #Load Speak
      main.speakerToLoad $(this).attr('href')
      #Move slider
      if typeof $(this).attr('rel') isnt "undefined"
        $(".slider-speakers").slickGoTo $(this).attr('rel')
      return

    #Modal Videos
    $(document).on "click", ".speaker_videos", (e) ->
      $(".slider-content").slick
        dots: false
        autoplay: false
        speed: 800
        autoplaySpeed: 3000
        accessibility: true
        fade: false
        infinite: true
        pauseOnHover: true
        swipe: true
        slidesToShow: 1
        slidesToScroll: 1
        arrows: true,
        lazyLoad: 'progressive'

      $("#myModal").modal 'show'

    $("#myModal").on "shown.bs.modal", (e) ->
      $(window).resize()
  speakerToLoad: (slug) ->
    speaker = speakers[slug]
    #TOP
    $(".speaker_nombre").empty().html speaker.top.nombre
    $(".speaker_texto1").empty().text speaker.top.texto1
    $(".speaker_texto2").empty().text speaker.top.texto2
    $(".speaker_imagen_fondo").css "background-image", "url(" + APP_URI + speaker.top.imagen_fondo + ")"

    #MIDDLE
    quotes = speaker.middle.textos.join()
    if quotes isnt ""
      $(".speaker_middle").empty().html quotes
      $(".quotes").fadeIn 'fast'
    else
      $(".quotes").fadeOut 'fast'

    #BOTTOM



    $(".speaker_bio").empty().html speaker.bottom.bio

    #Botonera
    count_buttons = 0
    buttons_class = new Array()

    if speaker.bottom.web_personal isnt ""
      $(".speaker_web").attr "href", speaker.bottom.web_personal
      buttons_class.push 'web'
      count_buttons++;

    if speaker.bottom.libros isnt ""
      $(".speaker_libros").attr "href", speaker.bottom.libros
      buttons_class.push 'libros'
      count_buttons++;

    if speaker.bottom.presentaciones isnt ""
      $(".speaker_presentaciones").attr "href", speaker.bottom.presentaciones
      buttons_class.push 'presentaciones'
      count_buttons++;

    #Videos modal y botonera clase videos
    if speaker.bottom.videos.length > 0
      buttons_class.push 'videos'
      count_buttons++;
      $(".slider-content").empty()
      _.map speaker.bottom.videos, (video, key) ->
        htmlVideo = [
          '<div class="item">'
          '<iframe width="100%" height="400" src="//www.youtube.com/embed/' + video + '?rel=0" frameborder="0" allowfullscreen></iframe>'
          '</div>'
        ].join('\n')
        $(".slider-content").append htmlVideo
        return

    #Agregar clases de control de botonera
    buttons_class.push 'links_'+count_buttons
    $(".links").removeClass 'web videos libros presentaciones links_1 links_2 links_3 links_4'
    $(".links").addClass buttons_class.join(" ");

    #Active thumbs
    $(".thumbs-speakers .load_speaker").removeClass 'active'
    $(".speak_"+ slug).addClass 'active'


$('document').ready ->
  window.main.init()
